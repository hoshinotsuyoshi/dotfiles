// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "..."
      ]
    },
    "TSX": {
      "language_servers": ["deno", "!typescript-language-server", "!vtsls"]
    },
    "JavaScript": {
      "language_servers": ["deno", "!typescript-language-server", "!vtsls"]
    }
  },
  "theme": "Me",
  "vim_mode": true,
  "soft_wrap": "editor_width",
  "autosave": "on_focus_change",
  "ui_font_family": "JetBrains Mono",
  "buffer_font_size": 11, // default is 15
  "buffer_font_weight": 100, // 100-900, default is 400
  "buffer_line_height": "standard", // default is "confortable"
  "ui_font_size": 11, // default is 16
  "ui_font_weight": 200,
  "agent_ui_font_size": 13, // ui
  "agent_buffer_font_size": 10 // code
}
